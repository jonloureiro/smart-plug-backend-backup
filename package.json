{
  "name": "smart-plug-backend",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-2.0",
  "main": "src/main.ts",
  "scripts": {
    "postinstall": "yarn build",
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "nodemon -e ts --exec 'yarn build&& node dist/main.js'",
    "lint": "eslint --ext .ts src/",
    "clean": "rm dist coverage -Rf",
    "test": "jest -i",
    "tdd": "yarn test --watch",
    "cover": "yarn test --coverage",
    "typeorm": "ts-node node_modules/typeorm/cli -f ./src/database/config.ts"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "class-validator": "^0.9.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.12.0",
    "reflect-metadata": "^0.1.13",
    "restify": "^8.3.3",
    "restify-errors": "^8.0.1",
    "typeorm": "^0.2.18",
    "ws": "^7.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.16",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.6.8",
    "@types/restify": "^7.2.12",
    "@types/restify-errors": "^4.3.3",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "~24.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "faker": "^4.1.0",
    "husky": "^3.0.2",
    "jest": "~24.0.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "~24.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "preset": "ts-jest"
  },
  "author": {
    "name": "Jonathan Loureiro",
    "email": "me@jonloureiro.dev",
    "url": "https://jonloureiro.dev"
  },
  "repository": "github:jonloureiro/smart-plug-backend"
}
