  "main": "src/index.ts",
  "scripts": {
    "postinstall": "yarn build",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon -e ts --exec 'yarn build&& node dist/index.js'",
    "lint": "eslint --ext .ts src/",
    "clean": "rm dist -Rf",
    "test": "jest",
    "tdd": "yarn test --watch",
    "cover": "yarn test --coverage",
    "typeorm": "ts-node node_modules/typeorm/cli -f ./src/database/config.ts"
  },
  "dependencies": {
    "pg": "^7.12.0",
    "reflect-metadata": "^0.1.13",
    "restify": "^8.3.3",
    "supertest": "^4.0.2",
    "typeorm": "^0.2.18",
    "ws": "^7.1.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.8",
    "@types/restify": "^7.2.12",
    "@types/supertest": "^2.0.8",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "author": {
    "name": "Jonathan Loureiro",
    "email": "me@jonloureiro.dev",
    "url": "https://jonloureiro.dev"
  },
  "repository": "github:jonloureiro/smart-plug-backend"
}
